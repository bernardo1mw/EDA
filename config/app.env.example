# Application Configuration Reference
# This file is for reference only and is not directly used by services
# Services use their own .env files or environment variables
# Copy values to individual service .env files as needed

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=order_process
POSTGRES_USER=order_user
POSTGRES_PASSWORD=order_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=order_user
RABBITMQ_PASSWORD=order_password
RABBITMQ_VHOST=/

# Elasticsearch Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Logstash Configuration
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5044

# Kibana Configuration
KIBANA_HOST=localhost
KIBANA_PORT=5601

# Application Configuration
APP_ENV=development
LOG_LEVEL=info
SERVICE_NAME=orders-api

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=orders-api
OTEL_RESOURCE_ATTRIBUTES=service.name=orders-api,service.version=1.0.0

# Performance Configuration
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
RETRY_DELAY=1000

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

