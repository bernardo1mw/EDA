# Payment Service (NestJS) Configuration
# Copy this file to .env and adjust values as needed

# Application
NODE_ENV=development
PORT=3001

# Database Configuration
# Use 'postgres' as hostname when running in Docker Compose
# Use 'localhost' when running locally
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=order_process
DB_USERNAME=order_user
DB_PASSWORD=order_password

# RabbitMQ Configuration
# Use 'rabbitmq' as hostname when running in Docker Compose
# Use 'localhost' when running locally
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=order_user
RABBITMQ_PASSWORD=order_password
RABBITMQ_VHOST=/

# Redis Configuration
# Use 'redis' as hostname when running in Docker Compose
# Use 'localhost' when running locally
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Observability
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# Stripe Configuration
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
