# Orders API (Python + FastAPI) Configuration
# Copy this file to .env and adjust values as needed

# Application
APP_NAME=Event Stream Orders API
APP_VERSION=1.0.0
DEBUG=false

# Database Configuration
# Use 'postgres' as hostname when running in Docker Compose
# Use 'localhost' when running locally
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=order_process
POSTGRES_USER=order_user
POSTGRES_PASSWORD=order_password

# Redis Configuration
# Use 'redis' as hostname when running in Docker Compose
# Use 'localhost' when running locally
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ Configuration
# Use 'rabbitmq' as hostname when running in Docker Compose
# Use 'localhost' when running locally
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=order_user
RABBITMQ_PASSWORD=order_password
RABBITMQ_VHOST=/

# OpenTelemetry Configuration
OTEL_EXPORTER_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=orders-api

# Performance Configuration
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
RETRY_DELAY=1000
